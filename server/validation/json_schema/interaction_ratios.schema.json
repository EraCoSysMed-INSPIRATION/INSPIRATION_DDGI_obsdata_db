{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": ["array", "null"],
  "title": "interaction_ratios",
  "$id": "json_schema/interaction_ratios",
  "description": "Array of interaction ratios for the given profile.",
  "items": {
    "type": "object",
    "title": "interaction_ratio",
    "properties": {
      "ratio_type": {
        "description": "Type of ratio.",
        "type": "string",
        "enum": ["AUC", "Cmax"],
        "meta:enum": {
          "AUC": "Area under the curve",
          "Cmax": "Peak concentration"
        }
      },
      "interaction_type": {
        "description": "Type of interaction.",
        "type": "string",
        "enum": ["DDI", "DGI", "DFI"],
        "meta:enum": {
          "DDI": "Drug-drug interaction",
          "DGI": "Drug-gene interaction",
          "DFI": "Drug-food interaction"
        }
      },
      "value": {
        "type": ["number", "null"],
        "description": "Value of the NCA-parameter."
      },
      "error_value": {
        "type": ["number", "null"],
        "description": "Error of the NCA-parameter value."
      },
      "error_type": {
        "description": "Type of the error.",
        "type": ["string", "null"],
        "enum": ["sd", "gsd", "sem", "p95", "cv"],
        "$comment": "also used in observations, biomarkers_and_covariates, interaction_ratio",
        "meta:enum": {
          "sd": "Arithmetic standard deviation",
          "gsd": "Geometric standard deviation",
          "sem": "standard error of the mean",
          "p95": "95th percentile",
          "cv": "Coefficient of variation"
        }
      },
      "compartment": {
        "description": "Compartment, where observations were made.",
        "type": ["string", "null"]
      },
      "organ": {
        "description": "Organ or tissue, where observations were made.",
        "type": ["string", "null"]
      },
      "matrix": {
        "description": "Matrix where observations were made.",
        "type": ["string", "null"]
      },
      "description": {
        "type": ["string", "null"],
        "description": "Description of the nca value."
      }
    },
    "required": [
      "parameter",
      "value_numeric",
      "error_type",
      "error_value",
      "compartment",
      "organ",
      "matrix",
      "description"
    ]
  }
}
