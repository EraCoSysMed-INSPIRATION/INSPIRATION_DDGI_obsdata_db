{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "drug_administrations",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "administrations": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "time": {
                  "type": "number",
                  "nullable": false
                },
                "dose": {
                  "type": "number",
                  "nullable": false
                },
                "duration": {
                  "type": "integer",
                  "nullable": false
                }
              },
              "required": ["time", "dose", "duration"]
            }
          ]
        },
        "time_unit": {
          "type": "string"
        },
        "dose_unit": {
          "type": "string"
        },
        "duration_unit": {
          "type": "string"
        },
        "administered_compound": {
          "type": "string"
        },
        "formulation": {
          "type": "string"
        },
        "formulation_comment": {
          "type": "null"
        },
        "administration_route": {
          "type": "string"
        }
      },
      "required": [
        "administrations",
        "time_unit",
        "dose_unit",
        "duration_unit",
        "administered_compound",
        "formulation",
        "formulation_comment",
        "administration_route"
      ]
    }
  ]
}
