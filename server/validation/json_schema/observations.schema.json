{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "observations",
  "$id": "json_schema/observations",
  "description": "Array of all observations of the given profile.",
  "items": {
    "type": "object",
    "properties": {
      "analyte": {
        "type": ["string", "null"]
      },
      "observations": {
        "title": "observations",
        "description": "Array of all observations of the given profile.",
        "minItems": 1,
        "type": "array",
        "items": {
          "type": "object",
          "description": "Object describing a single observation.",
          "title": "observation",
          "additionalProperties": false,
          "properties": {
            "time": {
              "type": "number",
              "description": "Time point of the observation."
            },
            "observation_numeric": {
              "type": ["number", "null"],
              "description": "Numeric value of the observation."
            },
            "observation_numeric_error": {
              "type": ["number", "null"],
              "description": "Error of the value of the observation."
            },
            "observation_blq": {
              "type": ["boolean", "null"],
              "description": "Observation is below the LLOQ."
            },
            "observation_string": {
              "type": ["string", "null"],
              "description": "Non-numeric value of the observation."
            }
          }
        }
      },
      "time_unit": {
        "type": "string",
        "description": "Unit of time point for the observations."
      },
      "observation_unit": {
        "type": ["string", "null"],
        "description": "Unit of  the observations."
      },
      "error_type": {
        "description": "Type of the error..",
        "type": ["string", "null"],
        "enum": ["sd", "gsd"]
      },
      "compartment": {
        "description": "Compartment, where observations were made.",
        "type": ["string", "null"]
      },
      "organ": {
        "description": "Organ or tissue, where observations were made.",
        "type": ["string", "null"]
      },
      "matrix": {
        "description": "Matrix where observations were made.",
        "type": ["string", "null"]
      },
      "lloq": {
        "type": ["null", "number"],
        "description": "Lower limit of quantification in the same unit as the observations."
      },
      "observation_description": {
        "type": ["string", "null"],
        "description": "Description of the observation. I.e., Measurements of heart rate."
      }
    },
    "required": [
      "analyte",
      "observations",
      "time_unit",
      "observation_unit",
      "error_type",
      "compartment",
      "organ",
      "matrix",
      "lloq",
      "observation_description"
    ]
  }
}
