{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "reference_info",
  "$id": "json_schema/reference_info",
  "description": "Object containing information about the source document.",
  "type": "object",
  "required": [
    "doctitle",
    "publication_year",
    "reference_type"
  ],
  "properties": {
    "doi": {
      "description": "Document object identifier",
      "type": "string",
      "nullable": true,
      "minLength": 4,
      "maxLength": 255
    },
    "alternative_id": {
      "description": "Alternative identifier of the document, i.e., link to the document",
      "type": "string",
      "nullable": true,
      "minLength": 4,
      "maxLength": 255
    },
    "pmid": {
      "description": "Pubmed identifier",
      "type": "integer",
      "nullable": true,
      "minimum": 1,
      "maximum": 10000000
    },
    "doctitle": {
      "description": "Title of the document",
      "type": "string",
      "nullable": false,
      "minLength": 4,
      "maxLength": 255
    },
    "first_author": {
      "description": "First author of the document",
      "type": "string",
      "nullable": true,
      "minLength": 4,
      "maxLength": 255
    },
    "publication_year": {
      "description": "Year of the publication of the document",
      "type": "integer",
      "nullable": false,
      "minimum": 1850,
      "maximum": 2022
    },
    "reference_type": {
      "description": "Type of the document, e.g., journal article.",
      "type": "string",
      "nullable": false,
      "enum": ["journal article", "book chapter", "drug label", "nda"]
    }
  },
  "additionalProperties": false
}