{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "demographics",
  "minItems": 1,
  "items": [
    {
      "type": "object",
      "title": "demographic",
      "description": "Object storing a singular demographic parameter.",
      "additionalProperties": false,
      "properties": {
        "parameter": {
          "description": "Name of the parameter, e.g., 'age'.",
          "nullable": false,
          "type": "string"
        },
        "value_type": {
          "description": "Type of the parameter value, e.g., 'mean'.",
          "nullable": false,
          "type": "string",
          "enum": [
            "mean",
            "median",
            "range_lower",
            "range_upper",
            "percentage",
            "single",
            "sd",
            "gsd",
            "count"
          ]
        },
        "value_numeric": {
          "description": "Numeric value of the parameter value, e.g., 'mean'.",
          "nullable": true,
          "type": "number"
        },
        "value_string": {
          "description": "Non-numeric value of the parameter value.",
          "nullable": true,
          "type": "string"
        },
        "value_unit": {
          "description": "Unit of the parameter value, e.g., 'years'.",
          "nullable": true,
          "type": "string"
        },
        "value_comment": {
          "description": "Additional information about the parameter.",
          "nullable": true,
          "type": "string"
        }
      },
      "required": [
        "parameter",
        "value_type",
        "value_numeric",
        "value_string",
        "value_unit",
        "value_comment"
      ]
    }
  ]
}
